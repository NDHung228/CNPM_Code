
@{
    ViewBag.Title = "SearchProduct";
}

@model List<WebMB.Context.Product>


    <div class="untree_co-section product-section before-footer-section">
        <div class="container">
            <div class="row">

                @foreach (var item in Model)
                {
                    <div class="col-12 col-md-4 col-lg-3 mb-5">

                        <a class="product-item" href="~/Home/Detail?productID=@item.id">

                            <img src="~/Content/images/@item.img" class="img-fluid product-thumbnail">
                            <h3 class="product-title">@item.name</h3>
                            <strong class="product-price">@item.price</strong>
                        </a>
                        <div style="padding-left:110px;">
                            <a href="/Cart/AddItem?productID=@item.id&quantity=1">

                                <span class="icon-cross">
                                    <button style="background-color: #3b5d50 !important"><img src="~/Content/images/cross.svg" class="img-fluid"> <b style="color:white">Add cart</b></button>
                                </span>
                            </a>
                        </div>
                    </div>
                }
            </div>

        </div>
    </div>

<h1>@ViewBag.Drum</h1>

